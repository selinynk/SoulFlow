@model SoulFlow.Models.UserEditViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-white text-center py-4 border-0">
                    <h3 class="fw-bold" style="color: var(--nature-teal);">Profili Düzenle</h3>
                </div>
                <div class="card-body p-4">

                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">

                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.ExistingImage))
                            {
                                <img src="/images/profiles/@Model.ExistingImage" class="rounded-circle border shadow-sm" width="100" height="100" style="object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=random&color=fff&size=100" class="rounded-circle shadow-sm">
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Profil Fotoğrafı Yükle</label>
                            <input asp-for="ProfilePicture" class="form-control" type="file" accept="image/*">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Hakkımda</label>
                            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Kendinden kısaca bahset..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">İlgi Alanları (Virgülle Ayır)</label>
                            <input asp-for="Interests" class="form-control" placeholder="Örn: Müzik, Sinema, Yürüyüş">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white fw-bold rounded-pill py-2" style="background: var(--nature-teal);">
                                Kaydet ve Güncelle
                            </button>
                            <a asp-action="Profile" class="btn btn-light rounded-pill">İptal</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@model SoulFlow.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoulFlow</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --love-coral: #ff7675;
            --passion-red: #d63031;
            --bg-gradient: linear-gradient(135deg, #fff0f3 0%, #e3fdf5 100%);
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: var(--bg-gradient);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            padding: 40px;
        }

        .logo-box {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #00b894, #ff7675);
            color: white;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 15px;
            box-shadow: 0 8px 15px rgba(255, 118, 117, 0.3);
        }

        .login-title {
            font-weight: 800;
            color: #2d3436;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.9rem;
            color: #636e72;
        }

        .form-control {
            border-radius: 12px;
            padding: 12px;
            border: 1px solid #eee;
            margin-bottom: 5px;
        }

            .form-control:focus {
                box-shadow: 0 0 0 3px rgba(255, 118, 117, 0.1);
                border-color: var(--love-coral);
            }

        .btn-login {
            background: linear-gradient(45deg, var(--love-coral), var(--passion-red));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 700;
            width: 100%;
            margin-top: 15px;
            transition: all 0.3s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(214, 48, 49, 0.3);
                color: white;
            }

        .footer-links {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
        }

            .footer-links a {
                color: var(--love-coral);
                text-decoration: none;
                font-weight: 600;
            }

                .footer-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="logo-box">
            <i class="fa-solid fa-ankh"></i>
        </div>
        <h3 class="login-title">SoulFlow'a Giriş Yap</h3>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0" style="border-radius: 12px 0 0 12px;"><i class="fa-regular fa-user text-muted"></i></span>
                    <input asp-for="UserName" class="form-control border-start-0" style="border-radius: 0 12px 12px 0;" placeholder="Kullanıcı adın..." />
                </div>
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0" style="border-radius: 12px 0 0 12px;"><i class="fa-solid fa-lock text-muted"></i></span>
                    <input asp-for="Password" type="password" class="form-control border-start-0" style="border-radius: 0 12px 12px 0;" placeholder="******" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="text-end mb-3">
                <a asp-controller="Account" asp-action="ForgotPassword" class="small" style="color: var(--love-coral); text-decoration: none;">Şifremi Unuttum</a>
            </div>

            <button type="submit" class="btn-login shadow-sm">Giriş Yap</button>
        </form>

        <div class="footer-links">
            <p class="text-muted">Hesabın yok mu? <a asp-controller="Account" asp-action="Register">Kayıt Ol</a></p>
            <a asp-controller="Home" asp-action="Index" class="text-muted small"><i class="fa-solid fa-arrow-left me-1"></i> Siteye Geri Dön</a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>